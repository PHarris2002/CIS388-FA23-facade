<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="facade.MainPage"
             Title="#facade"
             >

    <ScrollView BackgroundColor="#facade">
        <Grid Padding="0" RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />

            </Grid.RowDefinitions>


            <!--<RoundRectangle Grid.Row="0" Fill="#facade" CornerRadius="48" MaximumHeightRequest="150"/>-->
            <Grid Padding="12" Grid.Row="0" RowSpacing="12" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.10*" />
                    <ColumnDefinition Width="0.90*" />
                </Grid.ColumnDefinitions>
                
                <Label Grid.Column="0" Text="#" FontSize="60" VerticalOptions="Center" />
                
                <Label Grid.Column="1"
                       Text="FACADE"
                       FontSize="60"
                       FontFamily="Lobster"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       />

            </Grid>

            <Grid Padding="12" Grid.Row="1" RowSpacing="12" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0"
                    Grid.Column="0"
                    Text="#beaded"
                    BackgroundColor="#beaded"
                    FontSize="16"
                    IsEnabled="false "/>
                <Button Grid.Row="0"
                    Grid.Column="1"
                    Text="#fadedd"
                    BackgroundColor="#fadedd"
                    FontSize="16"
                    IsEnabled="false "/>
                <Button Grid.Row="0"
                    Grid.Column="2"
                    Text="#beefed"
                    BackgroundColor="#beefed"
                    FontSize="16"
                    IsEnabled="false "/>

                <Button Grid.Row="1"
                    Grid.Column="0"
                    Text=""
                    BackgroundColor="#eee"
                    FontSize="16"
                    IsEnabled="false "/>
                
                <Button Grid.Row="1"
                    Grid.Column="1"
                    Text=""
                    BackgroundColor="#eee"
                    FontSize="16"
                    IsEnabled="false "/>
                
                <Button Grid.Row="1"
                    Grid.Column="2"
                    Text=""
                    BackgroundColor="#eee"
                    FontSize="16"
                    IsEnabled="false "/>

            </Grid>

            <Grid Padding="12" Grid.Row="2" RowSpacing="12" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>
                <Button Grid.Row="0"
                    Grid.ColumnSpan="6"
                    Text="A"
                    WidthRequest="360"
                    HeightRequest="50"
                    BackgroundColor="#fff"
                    TextColor="White"
                    FontSize="30"
                    Padding="0, 0, 0, 2"
                />
                <Button Grid.Row="1"
                    Grid.Column="0"
                    Text="A"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#ccaaaa"
                    TextColor="White"
                    FontSize="30"
                    Padding="0, 0, 0, 2"
                />
                <Button Grid.Row="1"
                    Grid.Column="1"
                    Text="B"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#aaccaa"
                    TextColor="White"
                    FontSize="30"
                    Padding="0, 0, 0, 2"
                />
                <Button Grid.Row="1"
                    Grid.Column="2"
                    Text="C"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#aaaaff"
                    TextColor="White"
                    FontSize="30"
                    Padding="0, 0, 0, 2"
                />
                <Button Grid.Row="1"
                    Grid.Column="3"
                    Text="D"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#ccaaaa"
                    TextColor="White"
                    FontSize="30"
                    Padding="0, 0, 0, 2"
                />
                <Button Grid.Row="1"
                    Grid.Column="4"
                    Text="E"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#aaccaa"
                    TextColor="White"
                    FontSize="30"
                    Padding="0, 0, 0, 2"
                />
                <Button Grid.Row="1"
                    Grid.Column="5"
                    Text="F"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#aaaaff"
                    TextColor="White"
                    FontSize="30"
                    Padding="0, 0, 0, 2"
                />
                <Button Grid.Row="2"
                    Grid.Column="0"
                    Text="OK"
                    WidthRequest="60"
                    HeightRequest="60"
                    CornerRadius="30"
                    BackgroundColor="#666"
                    TextColor="White"
                    Clicked="Button_Clicked"
                    FontSize="20"
                    FontAttributes="Bold"
                    Padding="0, 0, 0, 2"
                >
                    <Button.Shadow>
                        <Shadow Brush="Gray"
                                Offset="0,0"
                                Radius="5"
                                Opacity="0.5" />
                    </Button.Shadow>
                </Button>
                <Button Grid.Row="2"
                    Grid.Column="2"
                    Text="⌫"
                    WidthRequest="60"
                    HeightRequest="60"
                    BackgroundColor="Transparent"
                    TextColor="#333"
                    BorderWidth="0"
                    FontSize="36"
                />


            </Grid>
        </Grid>

    </ScrollView>

</ContentPage>

