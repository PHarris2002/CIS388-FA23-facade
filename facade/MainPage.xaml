            <Grid RowDefinitions="*" ColumnDefinitions="0.10*, 0.90*" Margin="10" Padding="10" Grid.Row="1" RowSpacing="12" ColumnSpacing="12" BackgroundColor="#facade">

                <Label Grid.Column="0"
                       Text="#"
                       FontSize="60"
                       FontFamily="CuteLetters"
                       VerticalOptions="Center" />

                <Label Grid.Column="1"
                       Text="{Binding CurrentGuess}"
                       FontSize="60"
                       FontFamily="CuteLetters"
                       CharacterSpacing="5"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       />

            </Grid>

            <Grid RowDefinitions="*,*" ColumnDefinitions="*,*,*,*,*,*" Padding="12" Grid.Row="2" RowSpacing="12" ColumnSpacing="12">

                <Button Grid.Row="0"
                    Grid.Column="0"
                    Text="a"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#facade"
                    TextColor="#000"
                    BorderColor="White"
                    BorderWidth="2"
                    FontSize="30"
                    FontFamily="CuteLetters"
                    Margin="0,10"
                    Padding="0, 0, 0, 2"
                        
                    Command="{Binding AddLetterCommand}"
                    CommandParameter="a"
                />
                <Button Grid.Row="0"
                    Grid.Column="1"
                    Text="b"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#facade"
                    TextColor="#000"
                    BorderColor="White"
                    BorderWidth="2"
                    FontSize="30"
                    FontFamily="CuteLetters"
                    Padding="0, 0, 0, 2"
                        
                    Command="{Binding AddLetterCommand}"
                    CommandParameter="b"                        
                />
                
                <Button Grid.Row="0"
                    Grid.Column="2"
                    Text="c"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#facade"
                    TextColor="#000"
                    BorderColor="White"
                    BorderWidth="2"
                    FontSize="30"
                    FontFamily="CuteLetters"
                    Padding="0, 0, 0, 2"
                        
                    Command="{Binding AddLetterCommand}"
                    CommandParameter="c"
                />
                
                <Button Grid.Row="0"
                    Grid.Column="3"
                    Text="d"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#facade"
                    TextColor="#000"
                    BorderColor="White"
                    BorderWidth="2"
                    FontSize="30"
                    FontFamily="CuteLetters"
                    Padding="0, 0, 0, 2"
                        
                    Command="{Binding AddLetterCommand}"
                    CommandParameter="d"                        
                />
                <Button Grid.Row="0"
                    Grid.Column="4"
                    Text="e"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#facade"
                    TextColor="#000"
                    BorderColor="White"
                    BorderWidth="2"
                    FontSize="30"
                    FontFamily="CuteLetters"
                    Padding="0, 0, 0, 2"
                        
                    Command="{Binding AddLetterCommand}"
                    CommandParameter="e"                        
                />
                <Button Grid.Row="0"
                    Grid.Column="5"
                    Text="f"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="#facade"
                    TextColor="#000"
                    BorderColor="White"
                    BorderWidth="2"
                    FontSize="30"
                    FontFamily="CuteLetters"
                    Padding="0, 0, 0, 2"
                        
                    Command="{Binding AddLetterCommand}"
                    CommandParameter="f"
                />
                <Button Grid.Row="1"
                    Grid.ColumnSpan="4"
                    Text="SUBMIT"
                    WidthRequest="250"
                    HeightRequest="60"
                    CornerRadius="30"
                    BackgroundColor="#000"
                    TextColor="White"
                    
                    FontSize="20"
                    FontAttributes="Bold"
                    Padding="0, 0, 0, 2"
                    Command="{Binding GuessCommand}"
                >
                </Button>
                <Button Grid.Row="1"
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Text="DELETE"
                    WidthRequest="120"
                    HeightRequest="60"
                    CornerRadius="30"
                    BackgroundColor="#000"
                    TextColor="White"
                    FontSize="20"
                    FontAttributes="Bold"
                    Padding="0, 0, 0, 2"
                        
                    Command="{Binding DeleteLetterCommand}"
                >
                </Button>


            </Grid>
        </Grid>

    </ScrollView>

</ContentPage>

