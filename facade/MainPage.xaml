            <CollectionView HeightRequest="125"
                            ItemsSource="{Binding Guesses}"
                            ItemsLayout="VerticalGrid, 3">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="local:ColorGuess">
                        <Button 
                            Text="{Binding Guess}"
                            BackgroundColor="{Binding Color}"
                            Margin="10"
                            Padding="10"
                            FontSize="16"
                            FontAttributes="Bold"
                            CharacterSpacing="2"
                            IsEnabled="false "/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
