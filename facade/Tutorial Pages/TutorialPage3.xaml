<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="facade.TutorialPage3"
             Title="TutorialPage3">

    <ScrollView BackgroundColor="#facade">
        <Grid RowDefinitions="0.70*,0.10*, 0.20*" ColumnDefinitions="*,*,*">
            <Image
            Grid.ColumnSpan="3" 
            Grid.Row="0"
            Source="tutorial_3.png"/>
            <Label/>

            <Label
            Grid.ColumnSpan="3"
            Grid.Row="1"
            Text="Once you are ready to make your guess, click &quot;SUBMIT.&quot; Alternatively, you may use &quot;DELETE&quot; to backspace."
            HorizontalTextAlignment="Center"
            WidthRequest="270"
            FontSize="15"
            LineBreakMode="WordWrap"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>

            <Button
            Grid.Column="0"
            Grid.Row="2"
            WidthRequest="100"
            FontSize="30"
            Text="◀"
            Background="#44aaaa"
            VerticalOptions="Center"
            Clicked="Prev"/>

            <Label
            Grid.Column="1"
            Grid.Row="2"
            Text="3/4"
            FontFamily="CuteLetters"
            FontSize="30"
            CharacterSpacing="5"                
            HorizontalOptions="Center"
            VerticalOptions="Center"/>

            <Button
            Grid.Column="2"
            Grid.Row="2"
            WidthRequest="100"
            FontSize="30"
            Text="▶"
            Background="#44aaaa"
            VerticalOptions="Center"
            Clicked="Next"/>
        </Grid>
    </ScrollView>
</ContentPage>